<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="Helproom.commands.category">
      </category>
      <command
            categoryId="Helproom.handler2"
            id="Helproom.command1"
            name="Help Someone">
      </command>
      <command
            id="Helproom.command2"
            name="Ask for Help">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="helproom.handlers.EditorManagerT"
            commandId="Helproom.command1">
      </handler>
      <handler
            class="helproom.handlers.EditorManager"
            commandId="Helproom.command2">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="Helproom.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Help Room"
               mnemonic="M"
               id="Helproom.menus.sampleMenu">
            <command
                  commandId="Helproom.command2"
                  style="push">
            </command>
            <command
                  commandId="Helproom.command1"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="Helproom.toolbars.sampleToolbar">
            <command
                  commandId="Helproom.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="Helproom.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
